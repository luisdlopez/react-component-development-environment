{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "types",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "compiled",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "tests",
    "coverage",
    "dist",
    "build",
    "lib",
    "node_modules",
    "compiled"
  ]
}
